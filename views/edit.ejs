
<!-- edit.ejs -->
<%- include('layout', {
  body: `
  <h2>Edit Book</h2>
  <form action="/books/<%= book.id %>" method="POST">
    <div>
      <label for="title">Title:</label>
      <input name="title" id="title" value="<%= book.title %>" required />
    </div>
    <div>
      <label for="author">Author:</label>
      <input name="author" id="author" value="<%= book.author %>" />
    </div>
    <div>
      <label for="isbn">ISBN:</label>
      <input name="isbn" id="isbn" value="<%= book.isbn %>" />
    </div>
    <div>
      <label for="rating">Rating (1-5):</label>
      <input type="number" name="rating" id="rating" min="1" max="5" value="<%= book.rating %>" />
    </div>
    <div>
      <label for="review">Review:</label>
      <textarea name="review" id="review"><%= book.review %></textarea>
    </div>
    <div>
      <label for="date_read">Date Read:</label>
      <input type="date" name="date_read" id="date_read"
             value="<%= book.date_read ? book.date_read.toISOString().split('T')[0] : '' %>" />
    </div>
    <button type="submit">Update</button>
  </form>
  ` 
}) %>
